all: adlmidi gen_adldata dumpmiles dumpbank

adlmidi: tmp/midiplay.o tmp/dbopl.o tmp/adldata.o
	$(CXXLINK)  $^  $(DEBUG) $(SDL) -o $@ $(LDLIBS)

tmp/midiplay.o: src/midiplay.cc src/dbopl.h src/adldata.hh tmp
	$(CXX) $(CPPFLAGS) $<  $(DEBUG) $(SDL) -c -o $@

tmp/dbopl.o: src/dbopl.cpp src/dbopl.h tmp
	$(CXX) $(CPPFLAGS) $<  $(DEBUG)  -c -o $@

tmp/adldata.o: src/adldata.cc src/adldata.hh tmp
	$(CXX) $(CPPFLAGS) $<  $(DEBUG)  -c -o $@

gen_adldata: tmp/gen_adldata.o tmp/dbopl.o
	$(CXXLINK)  $^  $(DEBUG)  -o $@  $(LDLIBS)

tmp/gen_adldata.o: utils/gen_adldata.cc src/dbopl.h tmp
	$(CXX) $(CPPFLAGS) -I./src $<  $(DEBUG)  -c -o $@

dumpmiles: tmp/dumpmiles.o
	$(CXXLINK)  $^  $(DEBUG)  -o $@  $(LDLIBS)

tmp/dumpmiles.o: utils/dumpmiles.cc tmp
	$(CXX) $(CPPFLAGS) $<  $(DEBUG)  -c -o $@

dumpbank: tmp/dumpbank.o
	$(CXXLINK)  $^  $(DEBUG)  -o $@  $(LDLIBS)

tmp/dumpbank.o: utils/dumpbank.cc tmp
	$(CXX) $(CPPFLAGS) $<  $(DEBUG)  -c -o $@

tmp:
	mkdir $@

include depfun.mak
